<% show_post ||= false %>
<div class='row'>
<div class='span0 well text-center'>

<%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post' do %>
      <% if logged_in? %>
        <i class='icon-arrow-up'></i>
      <% end %>
    <% end %>
    <br/>
    <%= comment.total_votes %> votes
    <br/>
    <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post' do %>
      <% if logged_in? %>
        <i class='icon-arrow-down'></i>
      <% end %>
    <% end %>
  </div>
  
  <div class='well span8'>
    <em>"<%= comment.body %>"</em>
      <% if show_post %>
        on <%= link_to comment.post.title, post_path(comment.post) %>
      <% end %>
    <br/>
    <span class='quiet'>posted by</span> <%= link_to comment.user.username, user_path(comment.user) %>
    <small>at <%= display_datetime(comment.created_at) %></small>
  </div>
</div>


<% if false %>
	<%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post' do %>
	<% if logged_in? %>
	<i class ='icon-arrow-up'></i>
	<% end %>
	<% end %>
	<br>
	<%= comment.total_votes %> votes
	</br>
	<%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post' do %>
	<% if logged_in? %>
	<i class ='icon-arrow-down'></i>
	<% end %>
	<% end %>
</div>

<div class="well span8">
<%= comment.body %>
<% if show_post %>
on <%= link_to comment.post.title, post_path(comment.post) %> 
<% end %>
<br/>
<span class='quiet'>by </span><%= link_to comment.user, user_path(comment.user) %>
at <%= display_datetime(comment.created_at) %>
</div>

<% end %>
