<%= render "layouts/errors", obj: @post %>
<div class="well">
<%= form_for @post do |f| %>
   <div class="control-group">
   <p>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
   </p>

   <p>
      <div class="control-group">
   	<%= f.label :url %><br>
   	<%= f.text_field :url %>
   </div>
   </p>

   <p>
      <div class="control-group">
   	<%= f.label :description %><br>
   	<%= f.text_area :description, rows: 8 %>
   </div>
   </p>

   <div class="control-group">
      <%= f.label "Categories" %>
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cat|%>
      <% cat.label(class: "checkbox inline") {cat.check_box(class: "checkbox") + cat.text} %>
   <% end %>
   </div>

   <p>
   	<%= f.submit(@post.new_record? ? "Create Post" : "Update Post", class: "btn btn-primary") %>
   </p>
</div>
   <% end %>
</div>