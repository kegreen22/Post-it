<% if @post.errors.any? %>
<h5> There were some errors </h5>
<ul>
<% @post.errors.full_messages.each do |msg| %>
<li> <%= msg %>  </li>
<% end %>
</ul>
<% end %>

<%= form_for @post do |f| %>
   <p>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
   </p>

   <p>
   	<%= f.label :url %><br>
   	<%= f.text_field :url %>
   </p>

   <p>
   	<%= f.label :description %><br>
   	<%= f.text_area :description %>
   </p>

   <p>
   	<%= f.submit %>
   </p>
   <% end %>