<div class='row'>
<div class='span8 well'>
	<%= render post.categories %>
	<h5><%= link_to post.title, fix_url(post.url) %></h5>
	<p> <%= post.description %> </p>
	<p>
		<span class='quiet'>posted by: </span> <%= post.user.username %>
		<p>
		<small>at <%= display_datetime(post.created_at) %></small>
	</p>
	</p>
	<small>
		<span>
			<%= link_to(post.comments.size, post_path(post)) %><span> Comments</span>
		</span>
	</small>
	
</div>
</div>
